<% layout('layouts/boilerplate') -%>
<div class="row">
  <h1 class="text-center">New Campground</h1>
  <div class="col-md-6 offset-md-3">
    <form
      class="needs-validation"
      method="post"
      action="/campgrounds"
      novalidate
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input
          type="text"
          name="campground[title]"
          id="title"
          class="form-control"
          required
        />
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input
          type="text"
          name="campground[location]"
          id="location"
          class="form-control"
          required
        />
        <div class="valid-feedback">Looks good!</div>
      </div>

      <!-- <div class="mb-3">
        <label for="image" class="form-label"
          >Multiple files input example</label
        >
        <input
          class="form-control"
          type="file"
          id="image"
          name="image"
          multiple
        />
      </div> -->
      <!-- <input type="file" name="image" id="" multiple /> -->
      <!-- <div class="mb-3">
        <label for="image" class="form-label">Image Url</label>
        <input
          type="text"
          name="campground[image]"
          id="image"
          class="form-control"
          required
        />
        <div class="valid-feedback">Looks good!</div>
      </div> -->
      <div class="mb-3">
        <label for="price" class="form-label">Campground Price</label>
        <div class="input-group">
          <span class="input-group-text" id="price-label">$</span>
          <input
            id="price"
            type="number"
            min="0"
            class="form-control"
            placeholder="0.00"
            name="campground[price]"
            aria-label="Price"
            aria-describedby="price-label"
            required
          />
          <div class="valid-feedback">Looks good!</div>
        </div>
      </div>
      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea
          type="text"
          name="campground[description]"
          id="description"
          class="form-control"
          required
        ></textarea>
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="input-group custom-file-button mb-3">
        <label class="input-group-text" for="fileInputImages"
          >Choose image(s)...</label
        >
        <input
          type="file"
          class="form-control fileInputImages"
          id="fileInputImages"
          name="image"
          multiple
          required
        />
      </div>
      <p id="invalidType"></p>
      <p id="invalidSize"></p>
      <div class="ImagePreview"></div>
      <div class="mb-3">
        <button type="submit" class="btn btn-success">Add campground</button>
      </div>
    </form>
    <a href="/campgrounds">All Campgounds</a>
  </div>
</div>
